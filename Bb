import java.io.*;
import java.util.concurrent.TimeUnit;

public class CommandAutomation {

    public static void main(String[] args) {
        String filePath = "C:\\path\\to\\file.txt";
        String password = "your_password";

        // Infinite loop to run the command every 5 minutes
        while (true) {
            try {
                // Build the command
                ProcessBuilder processBuilder = new ProcessBuilder("cmd.exe", "/c", "type " + filePath + " | a.cmd");
                Process process = processBuilder.start();

                // Get input and output streams of the process
                OutputStream stdin = process.getOutputStream();
                InputStream stdout = process.getInputStream();
                BufferedReader reader = new BufferedReader(new InputStreamReader(stdout));
                BufferedWriter writer = new BufferedWriter(new OutputStreamWriter(stdin));

                // Read output to detect password prompt
                String line;
                while ((line = reader.readLine()) != null) {
                    System.out.println(line); // Optionally print output to console

                    // Check for the password prompt text here (adjust if needed)
                    if (line.contains("Enter Password:")) {
                        writer.write(password);
                        writer.newLine();
                        writer.flush();
                        break;
                    }
                }

                // Wait for the process to finish
                process.waitFor();

                // Sleep for 5 minutes (300 seconds) before rerunning the command
                TimeUnit.MINUTES.sleep(5);

            } catch (IOException | InterruptedException e) {
                e.printStackTrace();
            }
        }
    }
}
